<Window x:Class="OrdinaceApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IS Nemocnice" Height="600" Width="900" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" FontSize="14" Padding="5">
            <MenuItem Header="Aplikace">
                <MenuItem Header="Odhlásit se" Click="MenuOdhlasit_Click"/>
                <Separator/>
                <MenuItem Header="Ukončit" Click="MenuUkoncit_Click"/>
            </MenuItem>

            <MenuItem Header="Pacienti">
                <MenuItem Header="Seznam pacientů" Click="MenuPacientiSeznam_Click"/>
                <MenuItem Header="Přidat nového pacienta" Click="MenuPacientNovy_Click"/>
            </MenuItem>

            <MenuItem Name="MenuAdmin" Header="Administrace">
                <MenuItem Header="Log historie" Click="MenuLog_Click"/>
                <MenuItem Header="Správa uživatelů"/>
            </MenuItem>
        </Menu>

        <DataGrid Name="MainDataGrid" Grid.Row="1" Margin="10" AutoGenerateColumns="True" IsReadOnly="True" Background="WhiteSmoke"/>

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Name="TxtStatus" Text="Připraven."/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>