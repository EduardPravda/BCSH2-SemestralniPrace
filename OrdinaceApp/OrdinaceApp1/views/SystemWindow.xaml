<Window x:Class="OrdinaceApp1.Views.SystemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Systémový katalog" Height="500" Width="600" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="PŘEHLED DATABÁZOVÝCH OBJEKTŮ (SYSTEM CATALOG)" FontWeight="Bold" Margin="0,0,0,10"/>

        <DataGrid Name="DgObjects" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Background="#F0F0F0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Typ objektu" Binding="{Binding Typ}" Width="120" FontWeight="Bold"/>
                <DataGridTextColumn Header="Název" Binding="{Binding Nazev}" Width="*"/>
                <DataGridTextColumn Header="Stav" Binding="{Binding Status}" Width="80"/>
            </DataGrid.Columns>

            <DataGrid.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="Blue" Margin="5"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </DataGrid.GroupStyle>
        </DataGrid>

        <Button Grid.Row="2" Content="Zavřít" HorizontalAlignment="Right" Width="100" Height="30" Margin="0,10,0,0" Click="BtnClose_Click"/>
    </Grid>
</Window>