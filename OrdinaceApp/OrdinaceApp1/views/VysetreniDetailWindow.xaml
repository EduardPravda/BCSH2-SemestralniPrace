<Window x:Class="OrdinaceApp1.Views.VysetreniDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nové vyšetření" Height="550" Width="450" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="ZÁZNAM O VYŠETŘENÍ" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" FontSize="16"/>

            <TextBlock Text="Pacient:" FontWeight="Bold"/>
            <ComboBox Name="CmbPacient" DisplayMemberPath="CeleJmeno" SelectedValuePath="IdPacient" Margin="0,0,0,10" Padding="5"/>

            <TextBlock Text="Lékař:" FontWeight="Bold"/>
            <ComboBox Name="CmbLekar" DisplayMemberPath="CeleJmeno" SelectedValuePath="IdLekar" Margin="0,0,0,10" Padding="5"/>

            <Separator Margin="0,10"/>

            <TextBlock Text="Datum vyšetření:"/>
            <DatePicker Name="DpDatum" Margin="0,0,0,10"/>

            <TextBlock Text="Typ vyšetření (např. Vstupní, Kontrola):"/>
            <TextBox Name="TxtTyp" Margin="0,0,0,10" Padding="5"/>

            <TextBlock Text="Lékařská zpráva / Poznámka:"/>
            <TextBox Name="TxtPoznamka" Height="100" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,0,0,20" Padding="5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="💾 Uložit Záznam" Width="120" Height="40" Click="BtnUlozit_Click" FontWeight="Bold" Background="#DDDDDD"/>
                <Button Content="Zrušit" Width="80" Height="40" Margin="10,0,0,0" Click="BtnZrusit_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>