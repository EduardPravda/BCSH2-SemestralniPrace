<Window x:Class="OrdinaceApp1.Views.VysetreniWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Přehled vyšetření" Height="500" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="KNIHA VYŠETŘENÍ" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="➕ Nové vyšetření" Margin="20,0,0,0" Padding="10,5" Click="BtnPridat_Click"/>
        </StackPanel>

        <DataGrid Name="DgVysetreni" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Background="#FFF9E6">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Datum" Binding="{Binding Datum, StringFormat={}{0:dd.MM.yyyy}}" Width="100"/>
                <DataGridTextColumn Header="Pacient" Binding="{Binding PacientJmeno}" Width="150" FontWeight="Bold"/>
                <DataGridTextColumn Header="Lékař" Binding="{Binding LekarJmeno}" Width="150"/>
                <DataGridTextColumn Header="Typ" Binding="{Binding Typ}" Width="120"/>
                <DataGridTextColumn Header="Poznámka" Binding="{Binding Poznamka}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="🗑️ Smazat záznam" Width="120" Height="30" Click="BtnSmazat_Click"/>
            <Button Content="Zavřít" Width="80" Height="30" Margin="20,0,0,0" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>