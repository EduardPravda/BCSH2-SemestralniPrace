<Window x:Class="OrdinaceApp1.Views.AlergieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Evidence alergií" Height="450" Width="600" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="ALERGIE PACIENTŮ" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="➕ Přidat alergii" Margin="20,0,0,0" Padding="10,5" Click="BtnPridat_Click"/>
        </StackPanel>

        <DataGrid Name="DgAlergie" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Background="#FFF8F0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Pacient" Binding="{Binding PacientJmeno}" Width="150" FontWeight="Bold"/>
                <DataGridTextColumn Header="Alergie na" Binding="{Binding Nazev}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="🗑️ Smazat záznam" Width="120" Height="30" Click="BtnSmazat_Click"/>
            <Button Content="Zavřít" Width="80" Height="30" Margin="20,0,0,0" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>