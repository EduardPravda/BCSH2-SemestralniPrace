<Window x:Class="OrdinaceApp1.Views.DoporuceniWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Žádanky na vyšetření" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="VYSTAVENÁ DOPORUČENÍ" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="➕ Nová žádanka" Margin="20,0,0,0" Padding="10,5" Click="BtnPridat_Click"/>
        </StackPanel>

        <DataGrid Name="DgDoporuceni" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Background="#F0F8FF">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Datum" Binding="{Binding Datum, StringFormat={}{0:dd.MM.yyyy}}" Width="90"/>
                <DataGridTextColumn Header="Pacient" Binding="{Binding PacientJmeno}" Width="140" FontWeight="Bold"/>
                <DataGridTextColumn Header="Důvod žádanky" Binding="{Binding Duvod}" Width="*"/>
                <DataGridTextColumn Header="Vystavil lékař" Binding="{Binding LekarJmeno}" Width="140"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="🗑️ Smazat" Width="100" Height="30" Click="BtnSmazat_Click"/>
            <Button Content="Zavřít" Width="80" Height="30" Margin="20,0,0,0" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>