<Window x:Class="OrdinaceApp1.Views.OrdinacniDobaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ordinační hodiny" Height="500" Width="700" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="ROZPIS SLUŽEB" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="➕ Přidat čas" Margin="20,0,0,0" Padding="10,5" Click="BtnPridat_Click"/>
        </StackPanel>

        <DataGrid Name="DgDoby" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Background="#FFFFE0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Lékař" Binding="{Binding LekarJmeno}" Width="150" FontWeight="Bold"/>
                <DataGridTextColumn Header="Den v týdnu" Binding="{Binding Den}" Width="100"/>
                <DataGridTextColumn Header="Od" Binding="{Binding Zacatek}" Width="80"/>
                <DataGridTextColumn Header="Do" Binding="{Binding Konec}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="🗑️ Smazat záznam" Width="120" Height="30" Click="BtnSmazat_Click"/>
            <Button Content="Zavřít" Width="80" Height="30" Margin="20,0,0,0" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>