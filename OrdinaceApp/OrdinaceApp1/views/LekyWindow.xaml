<Window x:Class="OrdinaceApp1.Views.LekyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Správa léků (Katalog)" Height="500" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="KATALOG LÉKŮ" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="➕ Přidat nový lék" Margin="20,0,0,0" Padding="10,5" Click="BtnPridat_Click"/>

            <Button Content="💰 Hromadné přecenění" Margin="10,0,0,0" Padding="10,5" Background="Orange" Click="BtnPrecenit_Click"/>
        </StackPanel>

        <DataGrid Name="DgLeky" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Background="WhiteSmoke">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Název" Binding="{Binding Nazev}" Width="150" FontWeight="Bold"/>
                <DataGridTextColumn Header="Účinná látka" Binding="{Binding UcinnaLatka}" Width="150"/>
                <DataGridTextColumn Header="Cena (Kč)" Binding="{Binding Cena}" Width="80"/>
                <DataGridTextColumn Header="Dávkování" Binding="{Binding Davkovani}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="✏️ Upravit označený" Width="120" Height="30" Margin="0,0,10,0" Click="BtnUpravit_Click"/>
            <Button Content="🗑️ Smazat označený" Width="170" Height="30" Click="BtnSmazat_Click"/>
            <Button Content="Zavřít" Width="80" Height="30" Margin="20,0,0,0" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>