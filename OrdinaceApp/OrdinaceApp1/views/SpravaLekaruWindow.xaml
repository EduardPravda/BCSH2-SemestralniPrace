<Window x:Class="OrdinaceApp1.Views.SpravaLekaruWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Správa lékařů (CRUD)" Height="500" Width="850" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="PERSONÁLNÍ SPRÁVA - LÉKAŘI" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="➕ Přidat lékaře" Margin="20,0,0,0" Padding="10,5" Click="BtnPridat_Click"/>
        </StackPanel>

        <DataGrid Name="DgLekari" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Background="#E6F2FF">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Jméno" Binding="{Binding Jmeno}" Width="100"/>
                <DataGridTextColumn Header="Příjmení" Binding="{Binding Prijmeni}" Width="120" FontWeight="Bold"/>
                <DataGridTextColumn Header="Specializace" Binding="{Binding Specializace}" Width="120"/>
                <DataGridTextColumn Header="Telefon" Binding="{Binding Telefon}" Width="100"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                <DataGridTextColumn Header="ID Uživ." Binding="{Binding IdUzivatel}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="✏️ Upravit" Width="100" Height="30" Margin="0,0,10,0" Click="BtnUpravit_Click"/>
            <Button Content="🗑️ Smazat" Width="100" Height="30" Click="BtnSmazat_Click"/>
            <Button Content="Zavřít" Width="80" Height="30" Margin="20,0,0,0" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>