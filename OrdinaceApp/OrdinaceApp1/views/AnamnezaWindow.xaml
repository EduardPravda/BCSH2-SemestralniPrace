<Window x:Class="OrdinaceApp1.Views.AnamnezaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Anamnéza pacientů" Height="450" Width="700" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="HISTORIE NEMOCÍ (ANAMNÉZA)" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="➕ Přidat záznam" Margin="20,0,0,0" Padding="10,5" Click="BtnPridat_Click"/>
        </StackPanel>

        <DataGrid Name="DgAnamneza" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Background="#FFF8DC">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Pacient" Binding="{Binding PacientJmeno}" Width="150" FontWeight="Bold"/>
                <DataGridTextColumn Header="Datum" Binding="{Binding Datum, StringFormat={}{0:dd.MM.yyyy}}" Width="90"/>
                <DataGridTextColumn Header="Typ" Binding="{Binding Typ}" Width="100" FontWeight="Bold"/>
                <DataGridTextColumn Header="Popis / Rizika" Binding="{Binding Poznamky}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="🗑️ Smazat" Width="100" Height="30" Click="BtnSmazat_Click"/>
            <Button Content="Zavřít" Width="80" Height="30" Margin="20,0,0,0" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>