<Window x:Class="OrdinaceApp1.Views.NemocWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Číselník nemocí (Diagnózy)" Height="450" Width="600" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="KATALOG DIAGNÓZ" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="➕ Nová diagnóza" Margin="20,0,0,0" Padding="10,5" Click="BtnPridat_Click"/>
        </StackPanel>

        <DataGrid Name="DgNemoci" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Background="#F5F5F5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Název diagnózy" Binding="{Binding Nazev}" Width="200" FontWeight="Bold"/>
                <DataGridTextColumn Header="Popis / Stav" Binding="{Binding Popis}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="✏️ Upravit" Width="100" Height="30" Margin="0,0,10,0" Click="BtnUpravit_Click"/>
            <Button Content="🗑️ Smazat" Width="100" Height="30" Click="BtnSmazat_Click"/>
            <Button Content="Zavřít" Width="80" Height="30" Margin="20,0,0,0" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>