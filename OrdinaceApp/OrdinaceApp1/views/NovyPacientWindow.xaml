<Window x:Class="OrdinaceApp1.Views.NovyPacientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Přidat nového pacienta" Height="600" Width="450" WindowStartupLocation="CenterScreen">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <StackPanel>
                <TextBlock Text="ZÁKLADNÍ ÚDAJE" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                <TextBlock Text="Jméno:"/>
                <TextBox Name="TxtJmeno" Margin="0,0,0,10" Padding="5"/>

                <TextBlock Text="Příjmení:"/>
                <TextBox Name="TxtPrijmeni" Margin="0,0,0,10" Padding="5"/>

                <TextBlock Text="Datum narození:"/>
                <DatePicker Name="DpDatumNarozeni" Margin="0,0,0,20"/>

                <Separator Margin="0,10"/>

                <TextBlock Text="ADRESA" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                <TextBlock Text="Ulice:"/>
                <TextBox Name="TxtUlice" Margin="0,0,0,10" Padding="5"/>

                <TextBlock Text="Město:"/>
                <TextBox Name="TxtMesto" Margin="0,0,0,10" Padding="5"/>

                <TextBlock Text="PSČ (5 číslic):"/>
                <TextBox Name="TxtPsc" MaxLength="5" Margin="0,0,0,20" Padding="5"/>

                <Separator Margin="0,10"/>

                <TextBlock Text="Přiřadit k uživatelskému účtu:" FontWeight="Bold" Margin="0,0,0,5"/>

                <ComboBox Name="CmbUzivatele" 
                          Margin="0,0,0,20" 
                          Padding="5" 
                          DisplayMemberPath="CeleJmeno" 
                          SelectedValuePath="IdUzivatel"/>

                <TextBlock Text="(Vyberte existujícího uživatele, ke kterému se karta přiřadí)" 
                           FontSize="10" Foreground="Gray" Margin="0,-15,0,20"/>

                <Button Content="💾 Uložit Pacienta" Height="45" Click="BtnUlozit_Click" FontWeight="Bold" Background="#DDDDDD"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>