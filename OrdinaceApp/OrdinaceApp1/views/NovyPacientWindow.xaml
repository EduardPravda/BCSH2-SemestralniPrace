<Window x:Class="OrdinaceApp1.Views.NovyPacientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nový Pacient" Height="550" Width="500
        " WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel Margin="0,0,0,-10">
            <TextBlock Text="ZÁKLADNÍ ÚDAJE" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="Jméno:"/>
            <TextBox Name="TxtJmeno" Margin="0,0,0,10" Padding="3"/>

            <TextBlock Text="Příjmení:"/>
            <TextBox Name="TxtPrijmeni" Margin="0,0,0,10" Padding="3"/>

            <TextBlock Text="Datum narození:"/>
            <DatePicker Name="DpDatumNarozeni" Margin="0,0,0,10"/>

            <Separator Margin="0,10"/>
            <TextBlock Text="ADRESA" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="Ulice:"/>
            <TextBox Name="TxtUlice" Margin="0,0,0,10" Padding="3"/>

            <TextBlock Text="Město:"/>
            <TextBox Name="TxtMesto" Margin="0,0,0,10" Padding="3"/>

            <TextBlock Text="PSČ (5 číslic):"/>
            <TextBox Name="TxtPsc" MaxLength="5" Margin="0,0,0,20" Padding="3"/>

            <TextBlock Text="ID Uživatele (např. 4 nebo 5):"/>
            <TextBox Name="TxtUserId" Text="4" Margin="0,0,0,20" Padding="3"/>

            <Button Content="Uložit Pacienta" Height="40" Click="BtnUlozit_Click" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>