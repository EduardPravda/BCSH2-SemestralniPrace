<Window x:Class="OrdinaceApp1.Views.SouboryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Správce souborů" Height="450" Width="600" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="SPRÁVA SOUBORŮ (BLOB)" FontWeight="Bold" Margin="0,0,0,10"/>

        <DataGrid Name="DgSoubory" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Název" Binding="{Binding Nazev}" Width="*"/>
                <DataGridTextColumn Header="Typ" Binding="{Binding Typ}" Width="80"/>
                <DataGridTextColumn Header="Datum" Binding="{Binding DatumNahrani}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Nahrát nový soubor" Width="120" Height="30" Click="BtnUpload_Click"/>
            <Button Content="Zavřít" Width="80" Margin="10,0,0,0" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>