<Window x:Class="OrdinaceApp1.Views.PredpisyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Evidence receptů" Height="500" Width="900" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="VYDANÉ RECEPTY" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="➕ Nový předpis" Margin="20,0,0,0" Padding="10,5" Click="BtnPridat_Click"/>
        </StackPanel>

        <DataGrid Name="DgPredpisy" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Background="#F2FFF2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Datum" Binding="{Binding DatumVydani, StringFormat={}{0:dd.MM.yyyy}}" Width="90"/>
                <DataGridTextColumn Header="Pacient" Binding="{Binding PacientJmeno}" Width="140" FontWeight="Bold"/>
                <DataGridTextColumn Header="Lék" Binding="{Binding LekNazev}" Width="120" FontWeight="Bold" Foreground="Green"/>
                <DataGridTextColumn Header="Dávkování" Binding="{Binding Davkovani}" Width="120"/>
                <DataGridTextColumn Header="Délka léčby" Binding="{Binding DelkaLecby}" Width="100"/>
                <DataGridTextColumn Header="Lékař" Binding="{Binding LekarJmeno}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="🗑️ Smazat záznam" Width="120" Height="30" Click="BtnSmazat_Click"/>
            <Button Content="Zavřít" Width="80" Height="30" Margin="20,0,0,0" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>