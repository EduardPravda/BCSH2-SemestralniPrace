<Window x:Class="OrdinaceApp1.Views.RoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Číselník Rolí" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="SYSTÉMOVÉ ROLE" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <DataGrid Name="DgRole" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Background="#F0F0F0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IdRole}" Width="50" Visibility="Collapsed"/>
                <DataGridTextColumn Header="Název role" Binding="{Binding Nazev}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="2" Content="Zavřít" Width="80" Height="30" HorizontalAlignment="Right" Margin="0,10,0,0" Click="BtnClose_Click"/>
    </Grid>
</Window>