<Window x:Class="OrdinaceApp1.Views.AuditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Audit Log - Historie změn" Height="500" Width="900" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="HISTORIE ZMĚN V DATABÁZI (ADMIN)" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <DataGrid Name="DgAudit" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Background="WhiteSmoke">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Kdy" Binding="{Binding CasZmeny, StringFormat={}{0:dd.MM.yyyy HH:mm:ss}}" Width="140"/>
                <DataGridTextColumn Header="Kdo" Binding="{Binding Uzivatel}" Width="100"/>
                <DataGridTextColumn Header="Akce" Binding="{Binding TypOperace}" Width="80" FontWeight="Bold"/>
                <DataGridTextColumn Header="Tabulka" Binding="{Binding Tabulka}" Width="100"/>
                <DataGridTextColumn Header="Původní hodnota" Binding="{Binding StaraHodnota}" Width="200"/>
                <DataGridTextColumn Header="Nová hodnota" Binding="{Binding NovaHodnota}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="2" Content="Zavřít okno" HorizontalAlignment="Right" Width="120" Height="35" Margin="0,10,0,0" Click="BtnClose_Click"/>
    </Grid>
</Window>