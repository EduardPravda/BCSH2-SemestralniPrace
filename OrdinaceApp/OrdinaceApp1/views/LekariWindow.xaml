<Window x:Class="OrdinaceApp1.Views.LekariWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Struktura nemocnice" Height="400" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="ORGANIZAČNÍ STRUKTURA LÉKAŘŮ (HIERARCHIE)" FontWeight="Bold" Margin="0,0,0,10" TextWrapping="Wrap"/>

        <ListBox Name="LstLekari" Grid.Row="1" FontSize="14">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding CeleJmenoHierarchie}" FontFamily="Consolas"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Grid.Row="2" Content="Zavřít" HorizontalAlignment="Right" Width="100" Height="30" Margin="0,10,0,0" Click="BtnClose_Click"/>
    </Grid>
</Window>