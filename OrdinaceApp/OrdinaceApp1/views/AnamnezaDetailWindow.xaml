<Window x:Class="OrdinaceApp1.Views.AnamnezaDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Záznam anamnézy" Height="400" Width="450" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="PŘIDAT ANAMNÉZU" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Pacient:"/>
            <ComboBox Name="CmbPacient" DisplayMemberPath="CeleJmeno" SelectedValuePath="IdPacient" Margin="0,0,0,10"/>

            <TextBlock Text="Typ záznamu:"/>
            
            <ComboBox x:Name="cmbTyp" Width="120" HorizontalAlignment="Left">
                <ComboBoxItem Content="R" />
                <ComboBoxItem Content="O" />
            </ComboBox>

            <TextBlock Text="Datum záznamu:"/>
            <DatePicker Name="DpDatum" Margin="0,0,0,10"/>

            <TextBlock Text="Popis (Nemoci, operace, genetická rizika...):"/>
            <TextBox Name="TxtPoznamky" Height="60" TextWrapping="Wrap" Margin="0,0,0,20"/>

            <Button Content="💾 Uložit záznam" Height="40" Click="BtnUlozit_Click" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>