<Window x:Class="OrdinaceApp1.Views.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Historie změn (Admin)" Height="500" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="AUDIT LOG - HISTORIE ZMĚN" FontSize="18" FontWeight="Bold" Margin="10"/>

        <DataGrid Name="LogDataGrid" Grid.Row="1" Margin="10" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Čas" Binding="{Binding CasZmeny, StringFormat={}{0:dd.MM.yyyy HH:mm}}" Width="120"/>
                <DataGridTextColumn Header="Tabulka" Binding="{Binding Tabulka}" Width="80"/>
                <DataGridTextColumn Header="Akce" Binding="{Binding TypOperace}" Width="60" FontWeight="Bold"/>
                <DataGridTextColumn Header="Uživatel" Binding="{Binding Uzivatel}" Width="80"/>
                <DataGridTextColumn Header="Původní hodnota" Binding="{Binding StaraHodnota}" Width="*"/>
                <DataGridTextColumn Header="Nová hodnota" Binding="{Binding NovaHodnota}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="2" Content="Zavřít" Width="100" Height="30" Margin="10" HorizontalAlignment="Right" Click="BtnClose_Click"/>
    </Grid>
</Window>